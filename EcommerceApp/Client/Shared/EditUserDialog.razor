
@inject HttpClient httpClient

<MudDialog>
    <MudDialogTitle>Edit User</MudDialogTitle>
    <MudDialogContent>
        <MudForm Model="@User">
            <MudTextField Label="First Name" @bind-Value="User.FirstName" />
            <MudTextField Label="Last Name" @bind-Value="User.LastName" />
            <MudTextField Label="Email" @bind-Value="User.Email" />
            <!-- Add other fields as needed -->
        </MudForm>
    </MudDialogContent>
    <MudDialogActions>
        <MudButton Color="Color.Primary" OnClick="Save">Save</MudButton>
        <MudButton Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
    </MudDialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public AppUserDto User { get; set; }

    private async Task Save()
    {
        // Validation and saving logic goes here...
        var response = await httpClient.PutAsJsonAsync($"api/user/admin/{User.Id}", User);
        if (response.IsSuccessStatusCode)
        {
            MudDialog.Close(DialogResult.Ok(User));
        }
        else
        {
            // Handle errors here...
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
