
<div class="d-flex" style="height:100%">
    @*Callback child communicate with parent*@
    <MudButton Class="carousel-content" Style="top:40px;height:100px; width:200px;" OnClick="TriggerUpdate">Test UpdateProgress</MudButton>

    <MudIcon Class="mx-auto my-auto carousel-content" Icon="@Icons.Custom.Brands.MudBlazor" Size="@Size.Large" />
    <MudText Typo="Typo.h3" Class="mx-auto my-auto carousel-content">ThirdItem</MudText>
</div>

@code {
    [Parameter]
    public Action<int>? OnItemChanged { get; set; }

    private void TriggerUpdate()
    {
        OnItemChanged?.Invoke(1);
    }
}
