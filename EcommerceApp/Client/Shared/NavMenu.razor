@inject ICategoryService CategoryService;

<MudNavMenu Class="sidebar">
    <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
    <MudNavLink Href="/products/create" Match="NavLinkMatch.Prefix">Create Product</MudNavLink>
    @foreach (var category in CategoryService.Categories)
    {
        <MudNavLink Href="@($"shop/{category.Id}")" Match="NavLinkMatch.Prefix">@category.Name</MudNavLink>
    }
</MudNavMenu>

@code {
    protected override async Task OnInitializedAsync()
    {
        await CategoryService.GetAllCategoriesAsync();
    }
}
