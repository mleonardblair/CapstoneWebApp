@using MudBlazor

<MudItem xs="@Xs" sm="@Sm" md="@Md" lg="@Lg" xl="@Xl" @attributes="MudItemAttributes">
    <div @onclick="OnClick">
        <MudCard @attributes="MudCardAttributes" Style="width: 100%;">
            <MudCardContent Class="center-content full">
                <img src="@IconPath" alt="Card Icon" @attributes="ImageAttributes" />
                <MudText Typo="Typo.h6" @attributes="TextAttributes">@Title</MudText>
            </MudCardContent>
        </MudCard>
    </div>
</MudItem>

@code {
    [Parameter] public string IconPath { get; set; } = "/images/ImagePlaceholder.svg";
    [Parameter] public string Title { get; set; } = "Add Title";
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public Dictionary<string, object> MudItemAttributes { get; set; } = new Dictionary<string, object>();
    [Parameter] public Dictionary<string, object> MudCardAttributes { get; set; } = new Dictionary<string, object>();
    [Parameter] public Dictionary<string, object> ImageAttributes { get; set; } = new Dictionary<string, object>();
    [Parameter] public Dictionary<string, object> TextAttributes { get; set; } = new Dictionary<string, object>();
    [Parameter] public int Xs { get; set; } = 12;
    [Parameter] public int Sm { get; set; } = 6;
    [Parameter] public int Md { get; set; } = 4;
    [Parameter] public int Lg { get; set; } = 3;
    [Parameter] public int Xl { get; set; } = 2; 
    [Parameter] public Dictionary<string, object> AdditionalAttributes { get; set; } = new Dictionary<string, object>();
}
