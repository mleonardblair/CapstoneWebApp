@page "/"
@using MudBlazor.Services
@inject IJSRuntime JSRuntime
<MudBreakpointProvider OnBreakpointChanged="HandleBreakpointChange"></MudBreakpointProvider>


<PageTitle>Homepage</PageTitle>
<MudContainer>
    <!-- First Section -->
    <MudPaper Style="@_paperStyle"
        Class="section" 
        Elevation="3" 
        Align="Align.Left">
        <MudText Typo="Typo.h1">First Section</MudText>
        <!-- Your content here -->
    </MudPaper>

    <!-- Second Section -->
    <MudPaper Style="@_paperStyle" Class="section" Elevation="3" Align="Align.Right">
       
            <MudText Typo="Typo.h1">Second Section</MudText>
            <!-- Your content here -->
    </MudPaper>
</MudContainer>
